{
  "diagnostic": {
    "displayByAle": false
  },
  "languageserver": {
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": [
        "--lsp"
      ],
      "rootPatterns": [
        "*.cabal",
        "stack.yaml",
        "cabal.project",
        "package.yaml",
        "hie.yaml"
      ],
      "filetypes": [
        "haskell",
        "lhaskell"
      ]
    },
    "clojure-lsp": {
      "command": "/usr/local/bin/clojure-lsp",
      "filetypes": [
        "clojure"
      ],
      "rootPatterns": [
        "project.clj",
        "deps.edn"
      ],
      "additionalSchemes": [
        "jar",
        "zipfile"
      ],
      "trace.server": "verbose",
      "diagnostic.showUnused": true,
      "diagnostic.showDeprecated": true,
      "diagnostic.highlightPriority": 1000000,
      "initializationOptions": {
        "ignore-classpath-directories": false
      }
    }
  }
}
